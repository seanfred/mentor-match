<% @tableWidth ||= "600px" %>
<%= form_for @mentor do |f| %>
	<div class="right">
		Class <%= f.select :cf_class,
											options_for_select([['Ruby on Rails May/June', 'rails2'], ['Ruby on Rails July/August', 'rails3']], @mentor.cf_class), {},
											{class: "classInput"} %><br /><br />
	</div>
	<table align="center" width="<%= @tableWidth %>" class="clear" >
		<tr>
			<td>First Name</td>
			<td><%= f.text_field :personal_first_name, {id: "personal_first_name"} %></td>
		</tr>
		<tr>
			<td>Last Name</td>
			<td><%= f.text_field :personal_last_name, {id: "personal_last_name" } %></td>
		</tr>
		<tr>
			<td>What is your current title?</td>
			<td><%= f.text_field :career_job_title, {id: "career_job_title"} %></td>
		</tr>
		<tr>
			<td>What company do you work for now?</td>
			<td><%= f.text_field :career_company_private, {id: "career_company_private"} %></td>
		</tr>
		<tr>
			<td>Do you work at a:</td>
			<td><%= f.select :career_company_type,
											options_for_select([['Startup', 'startup'],
																					['Larger Company', 'largeco'],
																					['Self Employed', 'self'],
																					['No Preference', 'none']]) %></td>
		</tr>
		<tr>
			<td>Why do you want to be a Code Fellows Mentor?</td>
			<td><%= f.text_field :personal_why_mentor, {id: "personal_why_mentor"} %></td>
		</tr>
		<tr>
		<tr>
			<td>
				What kind of knowledge do you think you can impart upon your mentee?</td>
			<td><%= f.text_field :personal_knowledge_impart, {id: "personal_knowledge_impart"} %></td>
		</tr>
		<tr>
			<td>What is your career history like?</td>
			<td><%= f.text_field :career_information, {id: "career_information"} %></td>
		</tr>
		<tr>
			<td>If you attended university, which one?</td>
			<td>
					<%= f.text_field :experience_university, {id: "experience_university"} %></td>
		</tr>
		<tr>
			<td>Did you receive a degree? If so, for what?</td>
			<td><%= f.text_field :experience_degree, {id: "experience_degree"} %></td>
		</tr>
		<tr>
			<td>Any other degree or college experience?</td>
			<td><%= f.text_field :experience_other_degree, {id: "experience_other_degree"} %></td>
		</tr>
		<tr>
			<td colspan="2">
				Which skills below do you think that you
				would be capable of helping a mentee improve upon?</td>
		</tr>
		<tr>
			<td>Developer skills?</td>
			<td><%= f.select :mentee_skills_developer,
											options_for_select([['Very Able', '3'],
																					['Somewhat Able', '2'],
																					['Not Able', '1']]) %></td>
		</tr>
		<tr>
			<td>Object Oriented Programming?</td>
			<td><%= f.select :mentee_skills_object,
											options_for_select([['Very Able', '3'],
																					['Somewhat Able', '2'],
																					['Not Able', '1']]) %></td>
		</tr>
		<tr>
			<td>
				Which of the following languages/frameworks do you feel you
				are capable of teaching?</td>
		</tr>
		<tr>
			<td>HTML/CSS/XML</td>
			<td><%= f.select :mentee_skills_html_css,
											options_for_select([['Very Able', '3'],
																					['Somewhat Able', '2'],
																					['Not Able', '1']]) %></td>
		</tr>
		<tr>
			<td>JavaScript</td>
			<td><%= f.select :mentee_skills_javascript,
											options_for_select([['Very Able', '3'],
																					['Somewhat Able', '2'],
																					['Not Able', '1']]) %></td>
		</tr>
		<tr>
			<td>Java</td>
