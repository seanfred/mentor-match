<h1>Listing mentorships</h1>

<table>
  <tr>
    <th>Student</th>
    <th>Mentor</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @mentorships.each do |mentorship| %>
  <% @students.each do |student| %>
  <% @mentors.each do |mentor| %>
  <tr>
    <td><%= mentorship.student_id %><%= student.name %></td>
    <td><%= mentorship.mentor_id %><%= mentor.name %></td>
    <td><%= link_to 'Show', mentorship %></td>
    <td><%= link_to 'Edit', edit_mentorship_path(mentorship) %></td>
    <td><%= link_to 'Destroy', mentorship, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
  <% end %>
  <% end %>
<% end %>
</table>

<br />

